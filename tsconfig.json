{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleDetection": "auto",
    "allowJs": false,
    "allowSyntheticDefaultImports":true,
    /* Bundler mode */
    "baseUrl": ".", // or whatever your project root is
    "paths": {
      "socket:*": ["node_modules/@socketsupply/socket/index.d.ts"]
    },
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    "noEmit": false,
    

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": ["node_modules/", "./dist/*/**"],

  "include": ["src/**/*"],


}